---
import type { Project } from "../../types/projects";
import ActionButton from "./ActionButton.astro";

interface Props {
  project: Project;
}

const { project } = Astro.props;
const isDefaultA360Link = project.a360Link === "default";
---

<div class="card-back bg-white rounded-lg shadow-lg overflow-hidden p-6 flex flex-col">
  {
    isDefaultA360Link ? (
      <div class="flex-1 flex flex-col items-center justify-center">
        <h3 class="text-xl font-bold mb-4">{project.title}</h3>
        <p class="text-gray-600 text-center mb-6">{project.description}</p>
      </div>
    ) : (
      <div class="flex-1">
        <iframe
          src={project.a360Link}
          width="100%"
          height="100%"
          allow="fullscreen"
          style="border: none;"
        />
      </div>
    )
  }

  <div class="mt-4 w-full">
    {/* Reemplazando el bot√≥n con ActionButton */}
    <ActionButton type="back" variant={isDefaultA360Link ? 'secondary' : 'primary'} />
  </div>
</div>

<style>
  .card-back {
    min-height: 400px;
    transform: rotateY(180deg);
  }
</style>
