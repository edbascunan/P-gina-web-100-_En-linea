---
import Layout from '../../layouts/Layout.astro';
import ProjectCategoryCard from '../../components/ProjectCategoryCard.astro';
import { projectCategories } from '../../data/projects';
---

<Layout title="Proyectos">
  <section class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-12">Nuestros Proyectos</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projectCategories.map(category => (
        <ProjectCategoryCard id={category.id} title={category.title} description={category.description} projects={category.projects} />
      ))}
    </div>
  </section>
</Layout>
